<table class="glossary">
  <tr>
    <th class="term">term</th>
    <th class="definition">definition</th>
    <th class="example">example</th>
  </tr>
  *{spec/glossary as t}{
  <tr>
    <td><em>${t/term}</em></td>
    <td>^{rdoc/nop}{+{t/definition}}</td>
    <td style="font-size: 90%;">^{rdoc/nop}{+{t/example}}</td>
  </tr>
}
</table>
